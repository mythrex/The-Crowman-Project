<div class="container-fluid">
	
	<div class="row">
		<div class="col-sm-12 col-md-5 col-lg-4">
			<div class="row">
				<div class="col-sm-12">
					<div class="card card-inverse bg-info">
						<div class="card-header">
							<span>
								Information Messages
							</span>
						</div>
						<div class="card-body">
							<div class="special-card">
				              <span class="special-card-icon fa fa-info-circle"></span>
				              <span class="special-card-text" id="normal-message-count">78</span> 
				            </div>
						</div>
					</div>
				</div>

				<div class="col-sm-12">
					<div class="card card-inverse bg-app-color">
						<div class="card-header">
							<span>
								Important Messages
							</span>
						</div>
						<div class="card-body">
							<div class="special-card">
				              <span class="special-card-icon fa fa-envelope"></span>
				              <span class="special-card-text" id="important-message-count">78</span> 
				            </div>
						</div>
					</div>
				</div>

				<div class="col-sm-12">
					<div class="card card-inverse bg-warning">
						<div class="card-header">
							<span>
								Warning Messages
							</span>
						</div>
						<div class="card-body">
							<div class="special-card">
				              <span class="special-card-icon fa fa-exclamation-circle"></span>
				              <span class="special-card-text" id="warning-message-count">78</span> 
				            </div>
						</div>
					</div>
				</div>

			</div><!--row-->
		</div><!--col-for-special-cards-->

		<div class="col-sm-12 col-md-7 col-lg-8">
			<div class="card">
				<div class="card-body">
				
					<form id="addMessage" method="post">
						<div class="form-group row">
							<label class="col-sm-3 col-md-2 col-form-label" for="addMessage-text">Message</label>
							<input class="col-sm-9 col-md-10 form-control" name="addMessage-text" id="addMessage-text" type="text" placeholder="Type your message">
						</div>
						<div class="form-group row">
							<label class="col-sm-3 col-md-2 col-form-label">Type</label>
							<div class="col-sm-9 col-md-10">
								<div class="form-check col-lg-12">
									<label class="form-check-label">
										<input class="form-check-input" type="radio" name="addMessage-type" id="addMessage-type-normal" value="normal" checked>
										<span class="label-text text-info"><span class="fa fa-info-circle"></span> Normal</span>
									</label>
								</div>
								<div class="form-check col-lg-12">
									<label class="form-check-label">
										<input class="form-check-input" type="radio" name="addMessage-type" id="addMessage-type-important" value="important">
										<span class="label-text text-primary"><span class="fa fa-envelope"></span> Important</span>
									</label>
								</div>
								<div class="form-check col-lg-12">
									<label class="form-check-label">
										<input class="form-check-input" type="radio" name="addMessage-type" id="addMessage-type-warning" value="warning">
										<span class="label-text text-warning"><span class="fa fa-exclamation-circle"></span> Warning</span>
									</label>
								</div>
							</div>
						</div>
						<button type="button" id="addMessage-btn" class="btn btn-primary"><span class="fa fa-plus"> </span> Add</button>
					</form>

				</div>
			</div>	
		</div>

	</div>

	
	
	<div class="row">
		<div class="col-lg-12">
			<div class="card">
				<div class="card-header">
					<span>Messages</span>
				</div>
				<div class="card-body">
					<div class="row">
						<div class="col-lg-12">
							<table class="table table-striped table-responsive">
					          <thead>
					            <tr>
					              <th>Type</th>
					              <th>Message</th>
					              <th>UpdatedAt</th>
					              <th></th>
					              <th></th>
					            </tr>
					          </thead>
					          <tbody id="messages-table-body">

					            <tr data-id="2">
					            	<td><span class="fa fa-info text-info"></span></td>
					            	<td>Abcsdesdjahjksdha</td>
					            	<td class="text-muted">2017-09-25</td>
					            	<td><button type="button" class="btn btn-neutral message-edit"><span class="fa fa-pencil"></span></button></td>
					            	<td><button type="button" class="btn btn-danger message-delete"><span class="fa fa-trash"></span></button></td>
					            </tr>

					          </tbody>
					        </table>
						</div>
					</div>
					<!-- /.row -->
				</div>
			</div>
		</div>
	</div>
	<!-- /.row -->
	
</div><!--container-fluid-->


