  <body>
    <div class="wrapper">

      <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top">
        <a class="navbar-brand" href="#">Crowman</a>
        {{!-- <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button> --}}

        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <div class="dropdown">
              <a class="nav-link dropdown-toggle" id="messages" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                <span class="fa fa-envelope"></span>
              </a>
              <div class="dropdown-menu dropdown-menu-right" aria-labelledby="messages">
                <a class="dropdown-item" href="#">
                  <img class="profile-photo rounded-circle" src="http://via.placeholder.com/150x150" alt="profile">
                  <span class="message">Lorem ipsum dolor sit amet, consectetur adipisicing </span>
                  <small>By Shivam (Admin)</small>
                </a>
              </div>
            </div>
          </li>

          <li class="nav-item">
            <a class="nav-link" href="logout">Logout <span class="fa fa-sign-out"></span></a>
          </li>
        </ul>
        </nav>

          <div class="main-panel">
          <!-- main content -->
            <div class="sidebar">
              <div class="sidebar-wrapper">

                <ul class="nav">

                  {{#if customers}}
                  <li class="{{customers}}">
                    {{else}}
                    <li>
                  {{/if}}
                  <a href="/admin">
                    <p>Customers</p>
                  </a>
                </li>

                {{#if counters}}
                <li class="{{counters}}">
                  {{else}}
                  <li>
                {{/if}}
                  <a href="/admin/counters-page">
                    <p>Counters</p>
                  </a>
                </li>


                </ul>
              </div>
              <div class="sidebar-footer">
                <a>&copy; Crowman</a>
              </div>
            </div>

            <div class="content">

              {{{body}}}

          </div>
      </div>
    </div>
