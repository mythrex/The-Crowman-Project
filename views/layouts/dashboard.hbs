  $(function () {
    $('[data-toggle="tooltip"]').tooltip()
  });
  </script>

  <script type="text/javascript">
    setTimeout(() => {
      $('.alert').alert('close');
    },3000)
  </script>
  <script src="/js/common.js" charset="utf-8"></script>

  </body>
